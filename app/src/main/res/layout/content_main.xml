<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/activity_main">


    <Button
        android:id="@+id/encode_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="encode"
        app:layout_constraintLeft_toRightOf="@+id/encodeRaw_edit"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/encodeRaw_edit" />

    <Button
        android:id="@+id/decode_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="decode"
        app:layout_constraintLeft_toRightOf="@+id/decodeRaw_edit"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/decodeRaw_edit" />

    <EditText
        android:id="@+id/encodeRaw_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:layout_marginLeft="28dp"
        android:text="tumtrick"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="30dp" />

    <EditText
        android:id="@+id/encodeOutput_edit"
        android:layout_width="212dp"
        android:layout_height="90dp"
        android:maxLines="5"
        android:lines="3"
        android:minLines="3"
        android:scrollbars="vertical"
        android:inputType="textMultiLine"
        android:text=""
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/encode_button"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/encodeRaw_edit"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/encodeRaw_edit"
        app:layout_constraintHorizontal_bias="0.0" />


    <EditText
        android:id="@+id/decodeRaw_edit"
        android:layout_width="212dp"
        android:layout_height="118dp"
        android:maxLines="5"
        android:minLines="2"
        android:ems="10"
        android:inputType="textMultiLine"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/encodeOutput_edit"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/encodeOutput_edit"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintTop_toBottomOf="@+id/button_copy"
        android:layout_marginTop="14dp" />


    <EditText
        android:id="@+id/decodeOutput_edit"
        android:layout_width="212dp"
        android:layout_height="44dp"
        android:ems="10"
        android:inputType="text"
        android:text=""
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@+id/decode_button"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/decodeRaw_edit"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/decodeRaw_edit"
        app:layout_constraintHorizontal_bias="0.0" />

    <Button
        android:id="@+id/button_copy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="â†“"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/encodeOutput_edit"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/encodeOutput_edit"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/encodeOutput_edit" />

</android.support.constraint.ConstraintLayout>
